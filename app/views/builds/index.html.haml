- title "Repository #{@repository.github_name} builds history"

%h2= link_to @repository.github_name, @repository.html_url

.build
  = render 'tabs', repository: @repository, active_class_name: @active_class_name

  %table.table.table-striped.table-condensed
    %thead
      %tr
        %th Build
        %th Commit
        %th message
        %th Duration
        %th Finished
    %tbody
      - @builds.each do |build|
        %tr
          %td= link_to "##{build.position}", [@repository, build]
          %td= build.short_commit_id
          %td= build.last_commit_message
          %td #{build.duration} sec
          %td #{time_ago_in_words(build.finished_at)} ago
